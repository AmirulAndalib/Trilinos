{
    "plots" : {
        "files" : {
            "fileName": "Vortex_CUDA*",
            "type" : "xml",
            "ignoreOldFiles" : false,
            "recurseDirectories" : true
        },
        "categories": [
            "value"
        ],
        "plot" : [
        {
            "template" : "plot_template",
            "autoname" : {
                "useProperty" : "y/path",
                "formatByRemovingPrefix" : "\\/nightly_run_\\d{4}_\\d{2}_\\d{2}"
            },
            "category" : "value",
            "dataLines" : [
            {
                "name" : "Time",
                "x" : {
                    "getPath": "*",
                    "getElement" : "performance-report",
                    "getKey" : "date",
                    "unit" : "timestamp"
                },
                "y" : {
                    "getElement" : "performance-report|timing",
                    "getPath": "nightly_run_*_*_*",
                    "getPathAttribute": "name",
                    "getKey" : "value",
                    "strategy" : {
                        "getFirstMatchOnly" : "false",
                        "recurseChildGraphs" : "true"
                    },
                    "unit" : "seconds"
                },
                "color" : "77,77,202",
                "derivativeLines" : [
                {
                    "type" : "average",
                    "range" : 20,
                    "color" : "202,77,77"
                },
                {
                    "type" : "standardDeviationOffset",
                    "range" : 20,
                    "color" : "77,202,77"
                }
                ],
                "metadata": [
                {
                    "name": "gitSHA",
                    "extractor" : {
                        "getElement" : "performance-report|metadata",
                        "getPath" : "nightly_run_*_*_*/Trilinos*",
                        "getPathAttribute" : "key|value",
                        "getKey" : "value"
                    }
                }
                ],
                "rules" : [
                {
                    "condition" : "dataLine > average",
                    "action" : "warn"
                },
                {
                    "condition" : "dataLine > standardDeviationOffset",
                    "action" : "fail"
                }
                ]
            }
            ]
        }
      ]
    },
    "graphDisplay": {
        "displayCategory" : "value",
        "displayRange" : 30,
        "graphWidth" : 450,
        "graphHeight" : 450,
        "graphsPerRow" : 3,
        "graphsPerPage" : 15,
        "displayedDecimalPlaces" : 3
    }
}

